{
  "variables":
  {
    "user_home": "{{env `HOME`}}",
    "name": "packer-advanced-2",
    "version": "v7",
    "run_list": "recipe[cd-server]",
    "org": "bhaskar-sjb",
    "source_ami": "ami-5b673c34",
    "aws_region": "ap-south-1",
    "access_key": "{{env `AWS_ACCESS_KEY`}}",
    "secret_key": "{{env `AWS_SECRET_KEY`}}",
    "subnet_id": "subnet-8c0579e4",
    "vpc_id": "vpc-2d8ec545"
  },

  "builders":
  [
    {
      "type": "amazon-ebs",
      "communicator": "ssh",
      "ssh_private_key_file": "{{user `user_home`}}/.ssh/EC2-MUMBAI-KEY-PAIR.pem",
      "ssh_username": "ec2-user",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_keypair_name": "EC2-MUMBAI-KEY-PAIR",
      "ami_name": "{{user `name`}}-{{user `version`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}"
    }
  ],

  "provisioners": [
    {   
      "type": "shell",
      "inline": [
        "sudo mkdir -p /etc/chef && sudo chown -R root:root /etc/chef",
        "sudo mkdir -p /tmp/packer-chef-client && sudo chown -R root:root /tmp/packer-chef-client"
      ]
    },
    {
      "type": "file",
      "source": "{{pwd}}/bhaskar-sjb-validator.pem",
      "destination": "/tmp/bhaskar-sjb-validator.pem"
    },
    {
      "type": "file",
      "source": "{{pwd}}/client.rb",
      "destination": "/tmp/client.rb"
    },              
    {   
      "type": "shell",
      "inline": [
        "sudo mv /tmp/client.rb /etc/chef/client.rb",
        "sudo mv /tmp/bhaskar-sjb-validator.pem /etc/chef/bhaskar-sjb-validator.pem && sudo chown -R root:root /etc/chef"
      ]
    },    
    {
      "type": "chef-client",
      "execute_command": "cd /etc/chef && sudo chef-client -c /etc/chef/client.rb --no-color -j /tmp/packer-chef-client/first-boot.json && sudo cp /etc/chef/client.pem /tmp/packer-chef-client/client.pem",
      "server_url": "https://api.opscode.com/organizations/{{user `org`}}",
      "skip_clean_node": "true",
      "skip_clean_client": "true",
      "run_list": ["{{user `run_list`}}"]
    }
  ]
}

